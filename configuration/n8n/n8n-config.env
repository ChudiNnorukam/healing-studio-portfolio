# n8n Environment Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Database Configuration (SQLite for local development)
DB_TYPE=sqlite
DB_SQLITE_DATABASE=n8n.db

# Webhook Configuration
N8N_WEBHOOK_URL=http://localhost:5678/

# Security
N8N_SECURE_COOKIE=false
N8N_SESSION_SECRET=your-session-secret-here

# Logging
N8N_LOG_LEVEL=info

# Port Configuration
N8N_PORT=5678
N8N_PROTOCOL=http

# MCP Integration - CRITICAL FOR TOOL USAGE
N8N_MCP_ENABLED=true
N8N_COMMUNITY_PACKAGES_ALLOW_TOOL_USAGE=true

# Additional MCP Settings
N8N_MCP_SERVER_URL=http://localhost:5678/mcp
N8N_MCP_AUTH_TOKEN=your-mcp-token-here 